                    <th scope="col">#</th>
                    <th scope="col">name</th>
                    <th scope="col">delete</th>
                  </tr>
                </thead>
                <tbody>
                  <?php foreach($allProvince as $pro) : ?>
                    <tr>
                      <th scope="row"><?php echo $pro->id; ?></th>
                      <td><?php echo $pro->name; ?></td>
                      <td><a href="delete-province.php?id=<?php echo $pro->id; ?>" class="btn btn-danger  text-center ">Delete</a></td>
                    </tr>
