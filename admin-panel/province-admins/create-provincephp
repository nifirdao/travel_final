<?php require "../../config/config.php"; ?>
<?php 

  if(!isset($_SESSION["adminname"])) {
    header("location: ".ADMINURL."");
  }

  
  if(isset($_POST['submit'])) {

    if(empty($_POST['province_name'])) {
      echo "<script>alert('some inputs are empty');</script>";
    } else {

      $name = $_POST['province_name'];
      $image = $_FILES['image']['province_name'];

      $dir = "images_province/" . basename($image);

      $insert = $conn->prepare("INSERT INTO tbl_province (name, image)
      VALUES (:name, :image)");

      $insert->execute([
        ":name" => $name,
        ":image" => $image,
      ]);

      if(move_uploaded_file($_FILES['image']['tmp_name'], $dir)) {
        header("location: show-province.php");

      }
      


    }
  }


?>
       <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title mb-5 d-inline">Create Countries</h5>
          <form method="POST" action="create-country.php" enctype="multipart/form-data">
                <!-- Email input -->
                <div class="form-outline mb-4 mt-4">
                  <input type="text" name="name" id="form2Example1" class="form-control" placeholder="name" />
                 
                </div>
                <div class="form-outline mb-4 mt-4">
                  <input type="file" name="image" id="form2Example1" class="form-control" />
                 
                </div>  
                
                <br>
      
                <!-- Submit button -->
                <button type="submit" name="submit" class="btn btn-primary  mb-4 text-center">create</button>

          
              </form>

            </div>
          </div>
        </div>
      </div>
